<div class="mt-3">
    <h3>Tạo bài báo mới</h3>
    <a href="http://localhost:3000/trash">
        <h7>thùng rác ({{total}})</h7>
    </a>
    <div class=" d-flex align-items-center">
        <div class="mr-3 ml-3 form-check">
            <input class="form-check-input" checked="false" type="checkbox" value="" id="CheckAll">
            <label class="form-check-label" for="CheckAll">
                chọn tất cả
            </label>
        </div>
        <select class=" form-control form-control-sm mr-3" style="width: 160px">
            <option value="default">-- option --</option>
            <option value="">xoá</option>
            <option value="">...</option>
        </select>
        <div><button class="btn btn-primary">submit</button></div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th scope="row"></th>
                <th scope="row">STT</th>
                <th scope="col">tiêu đề khoá học</th>
                <th scope="col">mô tả khoá học</th>
                <th scope="col" class="upDown">thời gian tạo
                        <i class="fa-solid fa-sort course" style="color: #167af6"></i>
                </th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            {{#each data}}
            <tr>
                <th style="align-content: center">
                    <div class="mr-3 ml-3 form-check">
                        <input class="form-check-input" name="idCheckS[]" type="checkbox" value="{{this._id}}"
                            id="defaultCheck1">
                    </div>
                </th>
                <th scope="row" style="align-content: center;">{{this.id}}</th>
                <td>{{this.name}}</td>
                <td>{{this.description}}</td>
                <td>{{this.created_at}}</td>
                <td class="trash" style="width: 125px">
                    <a href="" class="btn btn-link">sửa</a>
                    <a href="" class="btn btn-link " data-toggle="modal" data-target="#exampleModal"><i
                            data-id="{{this._id}}" class="fa-solid fa-trash-can delete-btn"></i></a>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>

<script>
